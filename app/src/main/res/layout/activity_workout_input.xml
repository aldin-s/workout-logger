<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_exercise"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="#B0B0B0"
            android:letterSpacing="0.05"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <View
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:background="#404040"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Exercises Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exercises_header"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="#B0B0B0"
            android:letterSpacing="0.05"
            android:layout_marginBottom="12dp" />

        <!-- All Exercises RecyclerView (Standard + Custom) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/allExercisesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="visible" />

        <!-- New Exercise Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/newExerciseButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/new_exercise_button"
            android:textSize="14sp"
            android:textColor="#B0B0B0"
            android:letterSpacing="0.05"
            app:strokeColor="#606060"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_input_add"
            app:iconTint="#B0B0B0"
            app:iconGravity="textStart"
            android:layout_marginBottom="24dp" />

        <!-- Selected Exercise Display -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#404040"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/selectedExerciseLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ausgewählt"
            android:textSize="12sp"
            android:textColor="#808080"
            android:letterSpacing="0.05"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/selectedExerciseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bankdrücken"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp"
            android:visibility="gone" />

        <!-- Custom Exercise Input (hidden by default) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/customExerciseLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/customExerciseEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/custom_exercise_hint"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Workout Parameters -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/weightEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/weight_label"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/repsEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/reps_label"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pauseTimeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pause_time_label"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/setsEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sets_label"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/startButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/start_button"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.1"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp"
            app:cornerRadius="8dp" />

    </LinearLayout>
</ScrollView>
