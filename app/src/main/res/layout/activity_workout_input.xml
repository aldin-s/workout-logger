<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_exercise"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="#B0B0B0"
            android:letterSpacing="0.05"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <View
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:background="#404040"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Recently Used (Hidden initially) -->
        <TextView
            android:id="@+id/recentlyUsedHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recently_used_header"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="#B0B0B0"
            android:letterSpacing="0.05"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recentlyUsedRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:visibility="gone" />

        <!-- Exercises Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exercises_header"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="#B0B0B0"
            android:letterSpacing="0.05"
            android:layout_marginBottom="12dp" />

        <!-- Exercise Grid -->
        <GridLayout
            android:id="@+id/exerciseGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:layout_marginBottom="16dp">

            <!-- Kreuzheben -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardKreuzheben"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#404040"
                app:cardBackgroundColor="#1E1E1E"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/exercise_deadlift"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:padding="20dp"/>

                    <ImageButton
                        android:id="@+id/deleteKreuzheben"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:tint="#808080"
                        android:contentDescription="@string/delete_exercise" />

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bankdrücken -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBankdruecken"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#404040"
                app:cardBackgroundColor="#1E1E1E"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/exercise_bench_press"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:padding="20dp"/>

                    <ImageButton
                        android:id="@+id/deleteBankdruecken"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:tint="#808080"
                        android:contentDescription="@string/delete_exercise" />

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Rudern -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRudern"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#404040"
                app:cardBackgroundColor="#1E1E1E"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/exercise_rowing"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:padding="20dp"/>

                    <ImageButton
                        android:id="@+id/deleteRudern"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:tint="#808080"
                        android:contentDescription="@string/delete_exercise" />

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Kniebeuge -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardKniebeuge"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#404040"
                app:cardBackgroundColor="#1E1E1E"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/exercise_squat"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:padding="20dp"/>

                    <ImageButton
                        android:id="@+id/deleteKniebeuge"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:tint="#808080"
                        android:contentDescription="@string/delete_exercise" />

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

        <!-- Custom Exercises RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/customExercisesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="visible" />

        <!-- New Exercise Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/newExerciseButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/new_exercise_button"
            android:textSize="14sp"
            android:textColor="#B0B0B0"
            android:letterSpacing="0.05"
            app:strokeColor="#606060"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_input_add"
            app:iconTint="#B0B0B0"
            app:iconGravity="textStart"
            android:layout_marginBottom="24dp" />

        <!-- Selected Exercise Display -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#404040"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/selectedExerciseLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ausgewählt"
            android:textSize="12sp"
            android:textColor="#808080"
            android:letterSpacing="0.05"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/selectedExerciseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bankdrücken"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp"
            android:visibility="gone" />

        <!-- Custom Exercise Input (hidden by default) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/customExerciseLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/customExerciseEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/custom_exercise_hint"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Workout Parameters -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/weightEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/weight_label"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/repsEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/reps_label"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pauseTimeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pause_time_label"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/setsEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sets_label"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/startButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/start_button"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.1"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp"
            app:cornerRadius="8dp" />

    </LinearLayout>
</ScrollView>
