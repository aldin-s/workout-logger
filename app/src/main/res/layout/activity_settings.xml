<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp" />

        <!-- NOTIFICATIONS SECTION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_notifications"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#808080"
            android:letterSpacing="0.1"
            android:layout_marginBottom="16dp" />

        <!-- Vibration Toggle -->
        <RelativeLayout
            android:id="@+id/vibrationToggleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vibration_on_timer_end"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/vibrationSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- Vibration Duration -->
        <LinearLayout
            android:id="@+id/vibrationDurationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vibration_duration"
                android:textSize="16sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/vibrationDurationValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vibration_medium"
                android:textSize="14sp"
                android:textColor="#808080"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Sound Toggle -->
        <RelativeLayout
            android:id="@+id/soundToggleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sound_on_timer_end"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/soundSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#404040"
            android:layout_marginVertical="24dp" />

        <!-- TIMER SECTION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_timer"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#808080"
            android:letterSpacing="0.1"
            android:layout_marginBottom="16dp" />

        <!-- Default Pause Time -->
        <LinearLayout
            android:id="@+id/defaultPauseTimeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_pause_time"
                android:textSize="16sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/defaultPauseTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pause_time_seconds"
                android:textSize="14sp"
                android:textColor="#808080"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#404040"
            android:layout_marginVertical="24dp" />

        <!-- APPEARANCE SECTION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_appearance"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#808080"
            android:letterSpacing="0.1"
            android:layout_marginBottom="16dp" />

        <!-- Language -->
        <LinearLayout
            android:id="@+id/languageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/language"
                android:textSize="16sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/languageValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/language_german"
                android:textSize="14sp"
                android:textColor="#808080"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#404040"
            android:layout_marginVertical="24dp" />

        <!-- DATA SECTION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_data"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#808080"
            android:letterSpacing="0.1"
            android:layout_marginBottom="16dp" />

        <!-- Export History -->
        <TextView
            android:id="@+id/exportHistoryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/export_history"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:paddingVertical="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

        <!-- Import History -->
        <TextView
            android:id="@+id/importHistoryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/import_history"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:paddingVertical="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

        <!-- Delete All Data -->
        <LinearLayout
            android:id="@+id/deleteAllDataButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_all_data"
                android:textSize="16sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_all_warning"
                android:textSize="12sp"
                android:textColor="#808080"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#404040"
            android:layout_marginVertical="24dp" />

        <!-- ABOUT SECTION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_about"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#808080"
            android:letterSpacing="0.1"
            android:layout_marginBottom="16dp" />

        <!-- Version -->
        <TextView
            android:id="@+id/appVersionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_version"
            android:textSize="14sp"
            android:textColor="#808080"
            android:paddingVertical="4dp" />

        <!-- Copyright -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_copyright"
            android:textSize="14sp"
            android:textColor="#808080"
            android:paddingVertical="4dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

</ScrollView>
